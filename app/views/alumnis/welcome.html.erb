 <% if current_user %>
      <section id="team" class="team section-bg">
      <div class="container" data-aos="fade-up">

        <div class="section-title text-light">
          <h2 class="text-light">Alumni summaries</h2>
        </div>

        <div class="row">

          <% @summaries.each do |course, details|%>
            <div class="col-lg-4 mt-4" data-aos="fade-up" data-aos-delay="100">
              <div class="member d-flex align-items-start">
                <div class="member-info">
                  <h4><%= course %></h4>
                  <span>Total: <%=details["total"]%></span>
                  <span><%= link_to 'Open', details['link']%></span>
                </div>
              </div>
            </div>
          <%end%>

        </div>

      </div>
    </section>
  <% else%>
  <section id="hero" class="d-flex justify-cntent-center align-items-center">
    <div id="heroCarousel" data-bs-interval="5000" class="container carousel carousel-fade" data-bs-ride="carousel">
      <div class="carousel-item active">
        <div class="carousel-container">
          <h2 class="animate__animated animate__fadeInDown"> <span>Alumni DataBase</span></h2>
          <p class="notice text-success bg-light"><%= notice %></p>
          <p class="animate__animated animate__fadeInUp">Welcome to UTC-Kyema Alumni dataBase! Please submit your details. Click the button below</p>
          <%= link_to 'Add Alumni', new_alumni_path, :class => "btn-get-started animate__animated animate__fadeInUp scrollto"%>
        </div>
      </div>

    </div>
  </section>
  <%end%>