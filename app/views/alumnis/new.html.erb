<h1>Welcome! Please Enter your info in the table below</h1>
<%if @alumni.errors%>
    <%@alumni.errors.full_messages.each do |error|%>
        <div class="alert alert-danger "><%=error %></div>
    <%end%>
<%end%>
<div class="mt-3">
    <%= form_for @alumni do |f| %>
        <fieldset class="form-group">
        <%= f.label :first_name, "First Name", class:'form-control' %>
        <%= f.text_field :first_name, class:'form-control' %>
        </fieldset>
        <fieldset class="form-group">
        <%= f.label :last_name, "Last Name", class:'form-control'%>
        <%= f.text_field :last_name, class:'form-control'%>
        </fieldset>
        <fieldset class="form-group">
        <%= f.label :email, "Email", class:'form-control'%>
        <%= f.email_field :email, class:'form-control'%>
        </fieldset>
        <fieldset class="form-group">
            <%= f.label :course, "course", class:'form-control'%>
            <%= f.select :course, [['Diploma in Water engineering'],
             ['Diploma in Electrical Engineering'], ['Diploma in Civil Engineering'],
             ['Diploma in Architecture'], ['Diploma in Mechanical Engineering'],
            ['Certificate in Plumbing'], ['Certificate in Electrical Installation'], 
            ['Certificate in Building and Concrete Pracrice'], ['Certificate in Motor Vehicle Maintenance']], 
            class:'form-control'%>
        </fieldset>
        <fieldset class="form-group">
            <%= f.label :year_of_study, "Graduation year", class:'form-control'%>
            <%= f.date_field :year_of_study, class:'form-control'%>
        </fieldset>
        <fieldset class="form-group">
            <%= f.label :employed, "Are you employed?", class:'form-control'%>
            <%= f.select :employed,[['YES', 1], ['NO', 2]], class:'form-control'%>
        </fieldset>
        <fieldset class="form-group">
        <%= f.label :employer, "Employer", class:'form-control'%>
        <%= f.text_field :employer, class:'form-control'%>
        </fieldset>
        <fieldset class="form-group">
        <%= f.label :own_company, "What's name of your company", class:'form-control'%>
        <%= f.text_field :own_company, class:'form-control'%>
        </fieldset>
        <%= f.label :phonecontact, "What's your phone contact preferably wattsap", class:'form-control'%>
        <%= f.text_field :phonecontact, class:'form-control'%>
        </fieldset>
        <%= f.submit class:'form-control btn btn-primary' %>
        
    <% end %>
</div>
    