      <!-- <a href=index.html" class="logo"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>-->

      <nav id="navbar" class="navbar">
        <ul>
          <%if current_user%>
            <li class="dropdown"><a href="#"><span>Courses</span> <i class="bi bi-chevron-down"></i></a>
              <ul>
                <li><%= link_to  "All Alumni", alumnis_path%></li>
                <li><%= link_to  "Water", alumniss_water_path%></li>
                <li><%= link_to  "Civil", alumniss_civil_path%></li>
                <li><%= link_to  "Architecture", alumniss_architecture_path%></li>
                <li><%= link_to  "Mechanical", alumniss_mechanical_path%></li>
                <li> <%= link_to  "Electrical", alumniss_electrical_path%></li>
                <li class="dropdown"><a href="#"><span>Certificate Courses</span> <i class="bi bi-chevron-right"></i></a>
