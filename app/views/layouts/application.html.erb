<!DOCTYPE html>
<html>
  <head>
    <title>OldStudents</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="topbar" class="fixed-top d-flex align-items-center ">
      <div class="container d-flex align-items-center justify-content-center justify-content-md-between">
        <div class="contact-info d-flex align-items-center">
          <i class="bi bi-envelope-fill"></i><a href="mailto:contact@example.com">alumniutckyema@gmail.com</a>
          <i class="bi bi-phone-fill phone-icon"></i> +256 7059 2471 7
        </div>
        <div class="cta d-none d-md-block">
          <%= link_to  "Add Alumni", new_alumni_path%></li>
        </div>
      </div>
    </div>
    <header id="header" class="fixed-top d-flex align-items-center ">
    <div class="container d-flex align-items-center justify-content-between">

      <h1 class="logo"><%= link_to  "AUTCK", root_path%></h1>
