                  <li><%= link_to  "Plumbing", alumniss_cert_plumbing_path%></li>
                  <li><%= link_to  "Electrical Installation", alumniss_cert_electrical_path%></li>
                  <li><%= link_to  "Building & Concrete Practice", alumniss_cert_building_path%></li>
                  <li><%= link_to  "Motor Vehicle Maintenance", alumniss_cert_motor_vehicle_path%></li>
                </ul>
              </li>
              </ul>
            </li>
          <%end%>
          <li><a href="#blog">Blog</a></li>
          <li><a class="nav-link scrollto" href="#contact">Contact</a></li>
           <%if current_user.nil?%>
            <li><%= link_to 'Admin Login', login_path, class:'nav-link scrollto'%></li>
          <%else%>
            <li><%= link_to 'Logout', logout_path, class:'nav-link scrollto'%></li>
          <%end%>
        </ul>
        <span class="mobile-nav-toggle bg-dark">
          <%=content_tag(:li, fa_icon("solid bars"))%>
        </span>
      </nav><!-- .navbar -->

    </div>
  </header>

  
    <main id="main">
      <%= yield %>
      <%= javascript_pack_tag 'rails' %>
    </main>
    <footer id="footer" class="text-center">
      <div class="container">
        <div class="copyright">
          &copy; Copyright <strong><span>AUTCK Database</span></strong>. All Rights Reserved
        </div>
        <div class="credits">
          Designed by <a href="https://isabirye.netlify.app/" target="_blank">Emmanuel</a>
